<h2>New message</h2>

<% form_for(:message , :url => admin_user_messages_path(@user.id) ,:html => { :method => :post }) do |f| %>
  <%= f.error_messages %>

 
  <%= render :partial => 'form_fields', :locals => { :f => f } %> 
    <%= f.hidden_field :user_id, :value => @user.id %>

 	<div id="btn">
   		<%= f.submit 'Send Message' %> - or - <%= link_to 'Back', admin_users_path %>
 	</div>
<% end %>


