
 <table class="admin_listing">
  <tr>
     <th> Name </th>
     <th> Points earned</th>
     <th> Details </th>
  </tr>

  <% @users.each do |user| -%>
   <tr class="<%= cycle('odd', 'even')%>">
        <td> <%= user.name %> </td>
        <td> <%= "$ #{user.points}" %> </td>
        <td> <%= link_to "Point details",  admin_user_points_path(user.id)  %></td>
    </tr>

  <% end -%>

